function functionName() {               // häufiger
    //Codeblock
}

let functionName = function() {
    //Codeblock
}

functionName();

functionName(parameter1, parameter2);


function addNumbers(x, y) {
    return x + y;
}

let result = addNumbers(2, 3);          // 5


function sayHello(name) {
    console.log("Hello, " + name + "!")
}

sayHello("John")                // Hello, John!


// Anonyme Funktion:
let add = function(x, y) {
    return x + y;
}

let ergebnis = add(2, 3); // ergebnis = 5


// Arrowfunktion
let addieren = (x,y) => x + y;

let drittesResultImVideoBlock = add(2, 3); // drittesResultImVideoBlock = 5


// Callbackfunktion
function sagHallo(name, callback) {
    console.log("Hello, " + name + "!");
    callback();                         // Als Parameter wird eine Funktion aufgerufen
}

function sayGoodbye() {
    console.log("Goolbye!");
}

sayHello("John", sayGoodbye); // Hello, John! Goodbye!
