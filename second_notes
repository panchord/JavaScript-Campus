const zahl = 3; // Integer
const komma = 2.1478; // Float
const not = NaN; // Not-A-Number
const inf = Infinity; // Unendlich

console.log(zahl, komma, not, inf)


const sum = 1 + 2;
const sub = 77 - 7;

console.log(sum * sub); //3 * 70 = 210


const digit = 3.14159265359;
console.log(digit.toFixed(4)); // 3,1415
console.log(isNaN(digit)); //false -> prüft ob digit = not a number
digit.toString() // String-Transformation


